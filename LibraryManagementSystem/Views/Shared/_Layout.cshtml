<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Library Systems</title>

    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600;700&family=DM+Sans:wght@400;500;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/errorpages.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bookcreate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/booksite.css" asp-append-version="true" />
</head>
<body>
    <header class="sticky-top">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center" asp-controller="Book" asp-action="Index">
                    <div class="brand-icon me-2">
                        <i class="bi bi-book-half"></i>
                    </div>
                    <span>LMS <small class="fw-light">Pro</small></span>
                </a>

                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navMain">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navMain">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-controller="Book" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-controller="Book" asp-action="Index">Catalogue</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-add-book ms-lg-3 px-4" asp-controller="Book" asp-action="Create">
                                <i class="bi bi-plus-lg me-1"></i> Add Book
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer-custom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <span class="copyright">© 2026 Library Management System. Crafted for Excellence.</span>
                </div>
                <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                    <a asp-controller="Home" asp-action="Privacy" class="footer-link me-3">Privacy Policy</a>
                    <a href="#" class="footer-link">Support</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>