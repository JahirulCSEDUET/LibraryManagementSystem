@model LibraryManagementSystem.Presentation.Modules.Books.ViewModels.BookEditVM

@{
    ViewData["Title"] = "Book Details";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h1 class="display-5 fw-bold text-primary mb-0">Book Details</h1>
            <p class="text-muted">Viewing comprehensive information for: <strong>@Model.Title</strong></p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm">
                <i class="bi bi-pencil-square"></i> Edit Book
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 text-secondary">General Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-muted text-uppercase small">Title</div>
                        <div class="col-sm-8 fs-5 fw-semibold">@Model.Title</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-muted text-uppercase small">ISBN Number</div>
                        <div class="col-sm-8"><code class="text-dark fw-bold">@Model.ISBN</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-muted text-uppercase small">Genre</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info text-dark">@Model.Genre</span>
                        </div>
                    </div>
                    <div class="row mb-0">
                        <div class="col-sm-4 fw-bold text-muted text-uppercase small">Availability</div>
                        <div class="col-sm-8">
                            @if (Model.IsAvailable)
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i> Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-x-circle me-1"></i> Out of Stock</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-white py-3">
                    <h5 class="card-title mb-0 text-secondary">Specification & Metadata</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <tbody>
                            <tr>
                                <td class="ps-4 fw-bold text-muted w-25">Publication Year</td>
                                <td>@Model.PublicationYear</td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold text-muted">Page Count</td>
                                <td>@Model.Pages pages</td>
                            </tr>
                            <tr>
                                <td class="ps-4 fw-bold text-muted">Internal ID</td>
                                <td><small class="text-muted">#@Model.Id</small></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-3 bg-light">
                <div class="card-body">
                    <h6 class="fw-bold mb-3">System Logs</h6>
                    <div class="d-flex mb-3">
                        <div class="me-3">
                            <i class="bi bi-calendar-plus text-primary fs-4"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Added Date</small>
                            <span class="fw-bold">@Model.AddedDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="me-3">
                            <i class="bi bi-clock-history text-warning fs-4"></i>
                        </div>
                        <div>
                            <div class="me-3 text-warning">
                                <i class="bi bi-clock-history fs-4"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Last Updated</small>
                                @if (Model.LastUpdated.HasValue)
                                {
                                    <span class="fw-bold text-dark">
                                        @Model.LastUpdated.Value.ToString("MMM dd, yyyy HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">Never updated</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 p-3 border rounded-3 bg-white shadow-sm">
                <p class="small text-muted mb-0">
                    <i class="bi bi-info-circle me-1"></i> Data managed by Library Management System.
                </p>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    .card { transition: transform 0.2s ease-in-out; }
    .badge { padding: 0.5em 0.8em; }
    body { background-color: #f8f9fa; }
</style>