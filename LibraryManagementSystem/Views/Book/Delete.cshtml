@model LibraryManagementSystem.Presentation.Modules.Books.ViewModels.BookEditVM

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between mb-4 p-4 bg-white border-start border-5 border-danger shadow-sm rounded">
        <div>
            <h1 class="display-6 fw-bold text-danger mb-0">Delete Record?</h1>
            <p class="text-muted mb-0">Are you sure you want to permanently remove this book from the system?</p>
        </div>
        <div class="text-end">
            <span class="badge bg-danger p-2 px-3 fs-6 rounded-pill">Permanent Action</span>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-3 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0 text-dark"><i class="bi bi-journal-text me-2"></i>Book Specification</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted small text-uppercase fw-bold">Title</div>
                        <div class="col-sm-8 fw-bold">@Model.Title</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted small text-uppercase fw-bold">ISBN</div>
                        <div class="col-sm-8"><code>@Model.ISBN</code></div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-4 text-muted small text-uppercase fw-bold">Genre</div>
                        <div class="col-sm-8"><span class="badge bg-secondary">@Model.Genre</span></div>
                    </div>
                    <hr />
                    <p class="text-danger small"><i class="bi bi-exclamation-triangle-fill"></i> Deleting this record may affect related loan history or statistics.</p>
                </div>
            </div>

            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex align-items-center gap-3">
                    <button type="submit" class="btn btn-danger btn-lg px-5 shadow-sm">
                        <i class="bi bi-trash3-fill me-2"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none">
                        Cancel and Go Back
                    </a>
                </div>
            </form>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-3 bg-white">
                <div class="card-body">
                    <h6 class="fw-bold text-muted mb-4 text-uppercase small">Record History</h6>

                    <div class="d-flex mb-4">
                        <div class="me-3">
                            <i class="bi bi-calendar-check text-secondary fs-4"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Created On</small>
                            <span class="fw-semibold">@Model.AddedDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    </div>

                    <div class="d-flex">
                        <div class="me-3">
                            <i class="bi bi-clock-history text-secondary fs-4"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Last Modified</small>
                            @if (Model.LastUpdated.HasValue)
                            {
                                <span class="fw-semibold">@Model.LastUpdated.Value.ToString("g")</span>
                            }
                            else
                            {
                                <span class="text-muted fst-italic small">No modifications</span>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm mt-4 overflow-hidden">
                <div class="bg-dark text-white p-2 px-3 small d-flex justify-content-between">
                    <span><i class="bi bi-terminal me-2"></i>System Protocol</span>
                    <span class="text-secondary">v2.4.0</span>
                </div>
                <div class="card-body bg-light border border-top-0 rounded-bottom-3">
                    <p class="small mb-2 fw-bold text-uppercase text-muted" style="letter-spacing: 1px;">Critical Notice</p>
                    <p class="small mb-0 text-danger fw-semibold">
                        <i class="bi bi-slash-circle me-1"></i> Data recovery is disabled for this operation.
                        Ensure authorization before finalizing deletion.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

<style>
    body {
        background-color: #fcfcfc;
    }

    .card {
        border-radius: 12px;
    }

    .btn-danger {
        transition: all 0.3s;
    }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
        }
</style>